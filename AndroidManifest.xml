<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.khmelenko.lab.currency"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="16" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/LightThemeSelector">
        <activity
            android:name="com.gui.MainScreen" 
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gui.SettingsScreen"
            android:label="@string/title_activity_settings_screen"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        
        <activity
            android:name="com.gui.AboutScreen"
            android:label="@string/title_activity_about_screen" 
            android:configChanges="keyboardHidden|orientation">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>